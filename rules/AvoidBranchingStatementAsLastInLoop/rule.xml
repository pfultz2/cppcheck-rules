<?xml version="1.0"?>
<rule>
    <tokenlist>normal</tokenlist>
    <pattern><![CDATA[(for|while) \( [^()]+ \) { (?:[^{}]*({[^{}]*(?1)*[^{}]*})[^{}]*)*? (break|continue|return) [^;]*; }]]></pattern>
    <message>
        <id>AvoidBranchingStatementAsLastInLoop</id>
        <severity>style</severity>
        <summary>Messeage.</summary>
    </message>
</rule>
