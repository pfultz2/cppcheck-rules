<?xml version="1.0"?>
<rule>
    <tokenlist>normal</tokenlist>
    <pattern><![CDATA[if (\([^()]*(?1)*[^()]*\)) { if (\([^()]*(?1)*[^()]*\)) ({[^{}]*(?1)*[^{}]*}) }]]></pattern>
    <message>
        <id>CollapsibleIfStatements</id>
        <severity>style</severity>
        <summary>These two if statements can be collapsed into one.</summary>
    </message>
</rule>
