<?xml version="1.0"?>
<rule>
    <tokenlist>normal</tokenlist>
    <pattern><![CDATA[if|while|for|switch (\([^()]*(?-1)*[^()]*\)) { ({[^{}]*(?-1)*[^{}]*}) }]]></pattern>
    <message>
        <id>NestedBlocks</id>
        <severity>style</severity>
        <summary>Block directly inside block.</summary>
    </message>
</rule>
<rule>
    <tokenlist>normal</tokenlist>
    <pattern><![CDATA[case \w+ : ; { ({[^{}]*(?-1)*[^{}]*}) break ; }]]></pattern>
    <message>
        <id>NestedBlocks</id>
        <severity>style</severity>
        <summary>Block directly inside block.</summary>
    </message>
</rule>
