<?xml version="1.0"?>
<rule>
    <tokenlist>normal</tokenlist>
    <pattern><![CDATA[if (\([^()]*(?-1)*[^()]*\)) { [^{}]* (return|throw|break|continue) [^;]* ; } else {]]></pattern>
    <message>
        <id>UnnecessaryElseStatement</id>
        <severity>style</severity>
        <summary>Else statement is not necessary.</summary>
    </message>
</rule>
